{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (pick platform)",
      "type": "shell",
      "command": "dart",
      "args": [
        "lib/tools/task_runner/deploy.dart",
        "--build",
        "-l",
        "${input:platform}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build (pick platform) + Full-push to Android",
      "type": "shell",
      "command": "dart",
      "args": [
        "lib/tools/task_runner/deploy.dart",
        "--build",
        "-l",
        "${input:platform}",
        "--push",
        "--install"
      ],
      "problemMatcher": []
    },
    {
      "label": "Push & Install Existing APK",
      "type": "shell",
      "command": "dart",
      "args": [
        "lib/tools/task_runner/deploy.dart",
        "--push",
        "--install",
        "-d",
        "10.100.102.9:5555"
      ],
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "dart",
      "args": [
        "lib/tools/task_runner/deploy.dart",
        "--test"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "platform",
      "type": "pickString",
      "default": "android",
      "description": "Pick a platform to deploy on",
      "options": [
        {
          "value": "android",
          "label": "Android"
        },
        {
          "value": "ios",
          "label": "iOS",
        },
        {
          "value": "all",
          "label": "All"
        }
      ]
    }
  ]
}
